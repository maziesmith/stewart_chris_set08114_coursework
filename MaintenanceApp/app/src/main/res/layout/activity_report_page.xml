<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.napier.maintenanceapp.ReportPage">

    <ScrollView
        android:layout_width="344dp"
        android:layout_height="495dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repHome"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="16dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Spinner
                android:id="@+id/spnHome"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="16dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repTitle" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="55dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/lblPriority"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:text="@string/repPriority" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Spinner
                android:id="@+id/spnPriority"
                android:layout_width="152dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/lblDateSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repDateSubmitted"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="153dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <DatePicker
                android:id="@+id/dteDateSubmitted"
                android:layout_width="238dp"
                android:layout_height="141dp"
                android:layout_gravity="center_horizontal"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="16dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/lblDateDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repDateDue"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="114dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <DatePicker
                android:id="@+id/dteDateDue"
                android:layout_width="238dp"
                android:layout_height="141dp"
                android:layout_gravity="center_horizontal"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="16dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/lblDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repDesc" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/lblLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repLocation" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/btn_star" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repSend" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>

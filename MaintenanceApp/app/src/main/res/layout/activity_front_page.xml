<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="uk.ac.napier.maintenanceapp.FrontPage">

    <Button
        android:id="@+id/btnTasks"
        android:layout_width="134dp"
        android:layout_height="84dp"
        android:layout_marginRight="113dp"
        android:text="@string/btnTasks"
        android:background="@drawable/corner_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btnReport" />

    <Button
        android:id="@+id/btnReport"
        android:layout_width="134dp"
        android:layout_height="84dp"
        android:text="@string/btnReport"
        android:background="@drawable/corner_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="113dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/btnTasks"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnCompleted"
        android:layout_width="134dp"
        android:layout_height="84dp"
        android:layout_marginBottom="99dp"
        android:layout_marginRight="113dp"
        android:background="@drawable/corner_button"
        android:text="@string/btnCompletedTasks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnTasks" />

    <ImageView
        android:id="@+id/imgFPSettings"
        android:layout_height="30dp"
        android:layout_width="30dp"
        app:srcCompat="@drawable/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="9dp" />

</RelativeLayout>
